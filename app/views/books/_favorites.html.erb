<% if current_user.favorites.find_by(book_id: book.id) %>
  <%= link_to book_favorites_path(book.id), method: :delete, remote: true do %>
    ♥<%= book.favorites.count %> いいね
  <% end %>
<% else %>
  <%= link_to book_favorites_path(book.id), method: :post, remote: true do %>
    ♡<%= book.favorites.count %> いいね
  <% end %>
<% end %>