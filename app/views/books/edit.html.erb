<%= render 'layouts/error', message: @book %>

<h2><strong>Editing Book</strong></h2>

<%= form_with model:@book do |f| %>
  <h5>Title</h5>
  <%= f.text_field :title %>

  <h5>Body</h5>
  <%= f.text_area :body %><br/>

  <%= f.submit ' Update Book ' %>
<% end %>

<%= link_to book_path(@book.id), class: "link-color" do %>Show<% end %>
|
<%= link_to books_path, class: "link-color" do %>Back<% end %>