<%= render 'layouts/userbooknew' %>







<h2>Books</h2>
  <table>
    <thead>
      <tr>
        <th class="td-title">Title</th>
        <th class="td-title">Body</th>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= image_tag book.user.get_profile_image %></td>
          <td><%= link_to book_path(book) do %><%= book.title %><% end %></td>
          <td><%= book.body %></td>
          <th colspan="3"></th>
        </tr>
      <% end %>
    </tbody>
  </table>