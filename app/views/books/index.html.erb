<%= render 'layouts/error', message: @booknew %>
<div class="container-fluid pt-4">
  <div class="row">
    <div class="col-3 offset-9"><%= render 'layouts/search' %></div>
    <div class="col-md-3">
      <div id="profile">
        <%= render 'layouts/profile', user: current_user %>
      </div>
      <div id="newbook-template">
        <%= render 'layouts/booknew', book: @booknew %>
      </div>
      <h2 id="open-newbook-template"><i class="fa-solid fa-circle-right"></i></h2>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <%= link_to '新しい順', books_path(latest: "true", remote: true) %> |
      <%= link_to '古い順', books_path(old: "true", remote: true) %> |
      <%= link_to '評価の高い順', books_path(stars: "true", remote: true) %> |
      <%= link_to 'いいねが多い順', books_path(favorites: "true", remote: true) %>
      <%= render "books/index", books: @books %>
    </div>
  </div>
</div>