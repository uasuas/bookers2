<div class="row">
  <div class="col" id="message_<%= chat.id %>">
    <% if chat.user_id == current_user.id %>
      <div class="row justify-content-end">
        <p class="col-auto h-auto p-0 bg-light rounded-pill">
          <span class="card-body border-secondary">
            <%= link_to chat_path(chat), method: :delete, remote: true do %>
              <%= chat.message %>
            <% end %>
          </span>
        </p>
        <div class="col-auto">
          <%= image_tag chat.user.get_profile_image(50,50) %>
        </div>
      </div>
    <% else %>
      <div class="row">
        <div class="col-auto">
          <%= image_tag chat.user.get_profile_image(50,50) %>
        </div>
        <p class="col-auto h-auto p-0 bg-light rounded-pill">
          <span class="card-body border-secondary">
            <%= chat.message %>
          </span>
        </p>
      </div>
    <% end %>
  </div>
</div>
