<div class="container">
  <div class ="row">
    <div class="col-8 mx-auto">
      <div class="d-flex justify-content-between">
        <h1 class="text-left" id="room" data-room="<%= @room.id %>" data-user="<%= current_user.id %>">
          <%= @user.name %> さんとのチャット
        </h1>

      </div>
      <div id="message_buttons">
        <%= render "chats/message", chats: @chats %>
      </div>

      <div class="errors">
        <%= render "layouts/error", message: @chat %>
      </div>

      <%= form_with model: @chat, data: {remote: true} do |f| %>
        <%= f.text_field :message %>
        <%= f.hidden_field :room_id %>
      <% end %>
    </div>
  </div>
</div>