<div class="container">
  <div class ="row">
    <div class="col-8 mx-auto">
      <div class="d-flex justify-content-between">
        <h1 class="text-left" id="room" data-room="<%= @room.id %>" data-user="<%= current_user.id %>">
          <%= @user.name %> さんとのチャット
        </h1>

      </div>
      <div class="message" style="width: 400px;">
        <% @chats.each do |chat| %>
          <% if chat.user_id == current_user.id %>
            <p style="text-align: right;"><%= link_to chat_path(chat), method: :delete, remote: true do %><%= chat.message %><% end %></p>
          <% else %>
            <p style="text-align: left;"><%= chat.message %></p>
          <% end %>
        <% end %>
      </div>

      <div class="errors">
        <%= render "layouts/error", message: @chat %>
      </div>

      <%= form_with model: @chat, data: {remote: true} do |f| %>
        <%= f.text_field :message %>
        <%= f.hidden_field :room_id %>
      <% end %>
    </div>
  </div>
</div>