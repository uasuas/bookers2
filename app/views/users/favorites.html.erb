<div class="container m-4">
  <div class="row-cols-1">
    <div class="mx-auto col-sm-12 col-md-8 col-lg-5">
      <h3 class="text-center">〜<%= @user.name %>のいいね一覧〜</h3>
      <table class="table">
        <thaed>
          <tr>
            <th scope="col"></th>
            <th scope="col">Title</th>
            <th scope="col">Opinion</th>
          </tr>
        </thaed>
        <tbody>
          <% @favorite_books.each do |book| %>
          <tr>
            <td><%= image_tag book.user.get_profile_image(50, 50) %></td>
            <td><%= link_to book.title, book_path(book) %></td>
            <th><%= book.body %></th>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>