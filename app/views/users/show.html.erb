<%= render 'layouts/profile' %>
<%= render 'layouts/booknew', book: @booknew %>
<div class="flash">
  <%= flash[:notice] %>
</div>

<h2><strong>Books</strong></h2>
<table>
  <thead>
    <tr>
      <td><strong>Title</strong></td>
      <td><strong>Opinion</strong></td>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= image_tag book.user.get_profile_image %></td>
      <td><%= link_to book_path(@book.id) do %><%= book.title %><% end %></td>
      <td><%= book.body %></td>
      <th colspan="3"></th>
    </tr>
    <% end %>
  </tbody>
</table>